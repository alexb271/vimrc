" Folding
set foldmethod=syntax
set foldlevelstart=10
set foldcolumn=2

" Style
highlight Pmenu guifg=#eeeeee guibg=#606060
set guifont=Monospace\ Regular\ 12

" Disable cursor blinking
set guicursor+=a:blinkon0

" Disable toolbar
set guioptions-=T

" Disable menu
set guioptions-=m

" Always use dark mode
set guioptions+=d

" Do not show left scrollbar with split window
set guioptions-=L
